.inner-page
  padding standart-padding
  display flex
  @media (max-width breakpoint-xxl)
    padding standart-padding-xxl
  @media (max-width breakpoint-xl)
    flex-wrap wrap

.inner-page__main
  max-width 69%
  flex auto
  margin-right 40px
  @media (max-width breakpoint-xxl)
    margin-right 20px
  @media (max-width breakpoint-xl)
    order 2
    max-width 100%
    margin-right 0

.inner-page__aside
  flex none
  max-width 430px
  width 100%
  @media (max-width breakpoint-xxl)
    max-width 380px
  @media (max-width breakpoint-xl)
    order 1
    max-width 100%
    margin-bottom 30px
